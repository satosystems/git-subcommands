indent_style = space
indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab

[git-*]
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2
